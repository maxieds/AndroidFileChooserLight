<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextLabel" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal|italic</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="AppTheme.StockButton" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:layout_gravity">center|center_horizontal</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/stock_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >

    <corners android:radius="2dip" />

    <stroke
        android:width="1dip"
        android:color="@color/colorFileListDivider_border"
        />

    <gradient
        android:angle="45"
        android:endColor="@color/colorFileListDivider_gradientEnd"
        android:startColor="@color/colorFileListDivider_gradientStart"
        />

    <size android:height="2dp"/>

</shape>
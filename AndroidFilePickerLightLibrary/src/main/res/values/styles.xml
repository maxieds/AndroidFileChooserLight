<resources>

    <style name="LibraryDefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="filePickerTitleText">@string/filePickerTitleText</item>
        <item name="filePickerNavBarText">@string/filePickerNavBarText</item>
        <item name="filePickerDoneButtonText">@string/filePickerDoneButtonText</item>
        <item name="filePickerCancelButtonText">@string/filePickerCancelButtonText</item>
        <item name="namedFolderSDCardIcon">@drawable/named_folder_sdcard_icon32</item>
        <item name="defaultFileIcon">@drawable/text_file_icon32</item>
        <item name="defaultHiddenFileIcon">@drawable/hidden_file_icon32</item>
        <item name="defaultFolderIcon">@drawable/folder_icon32</item>
        <item name="namedFolderPicsIcon">@drawable/named_folder_images_icon32</item>
        <item name="namedFolderCameraIcon">@drawable/named_folder_camera_icon32</item>
        <item name="namedFolderScreenshotsIcon">@drawable/named_folder_screenshots_icon32</item>
        <item name="namedFolderDownloadsIcon">@drawable/named_folder_downloads_icon32</item>
        <item name="namedFolderUserHomeIcon">@drawable/named_folder_user_home_icon32</item>
        <item name="namedFolderMediaIcon">@drawable/named_folder_media_icon32</item>
        <item name="mainToolbarBackgroundColor">@color/colorMainToolbarBackground</item>
        <item name="mainToolbarBackgroundColor2">@color/colorMainToolbarBackground2</item>
        <item name="mainToolbarBackgroundColor3">@color/colorMainToolbarBackground3</item>
        <item name="mainToolbarBackgroundColor4">@color/colorMainToolbarBackground4</item>
        <item name="mainToolbarForegroundTextColor">@color/colorMainToolbarForegroundText</item>
        <item name="__colorPrimary">@color/__colorPrimary</item>
        <item name="__colorPrimaryDark">@color/__colorPrimaryDark</item>
        <item name="__colorPrimaryVeryDark">@color/__colorPrimaryVeryDark</item>
        <item name="__colorAccentLight">@color/__colorAccentLight</item>
        <item name="__colorAccent">@color/__colorAccent</item>
        <item name="__colorAccentMedium">@color/__colorAccentMedium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SelectionCheckBoxStyle" parent="LibraryDefaultTheme">
        <item name="colorControlNormal">?__colorAccentMedium</item>
        <item name="colorControlActivated">?__colorAccentMedium</item>
        <item name="buttonTint">?colorPrimary</item>
    </style>

    <style name="LibraryToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal|bold|italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10sp</item>
    </style>

    <style name="LibraryToolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal|italic|bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:paddingLeft">10sp</item>
    </style>

</resources>